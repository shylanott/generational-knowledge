#content
  font-family $atlas
  text-align center

.red-button
  background: #E16259;
  border: 1px solid #BE5643;
  border-radius: 6px;
  max-width 300px
  margin 0 auto
  font-family $atlas
  color white
  text-align center
  font-size 22px
  padding 1rem
  user-select none
  cursor pointer


.grey-button
  box-shadow: 0px -1px 4px rgba(0, 0, 0, 0.1), 0px 3px 4px rgba(0, 0, 0, 0.16);
  color rgba(0,0,0,.8)
  font-weight 600
  max-width 100px
  margin 0 auto
  border-radius 6px
  padding 1rem
  margin-bottom 1rem
  user-select none
  cursor pointer
  text-align center
  font-size 22px

.options
  div
    border-radius 6px
    margin 0 auto
    margin-bottom 1rem
    padding 1rem
    background red
    user-select none
    cursor pointer
    max-width 300px
    font-weight 400
    &:first-of-type
      background #FDDFCC
    &:nth-of-type(2)
      background #CFE4F9
    &:nth-of-type(3)
      background #E8D5CC
    &:nth-of-type(4)
      background #FFCCD2

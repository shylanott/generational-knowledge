  .grid-chart-container
    .grid-chart
      max-width 570px
      margin 0 auto
      .row
        width 100%
        position relative
        display flex
        margin 0 auto
        margin-bottom 10px
        z-index -1
        &:first-of-type
          height 55px
          background white
          position sticky
          top 0px
          left 0px
          z-index 1000
          .box-container
            .box
              position relative
              &:before
                content 'Gen Z'
                position absolute
                top 0px
                left 0px
                right 0px
                transform translate(0,198%)
                font-size 13px
                text-align center
              &:after
                content 'Ages 13–22'
                position absolute
                top 0px
                margin 0 auto
                left 0px
                right 0px
                transform translate(0,25%)
                font-size 10px
                width 40px
                text-align center
                font-weight 400
              &:nth-of-type(2)
                &:before
                  content 'Millennials'
                &:after
                  content 'Ages 23–38'
              &:nth-of-type(3)
                &:before
                  content 'Gen X'
                &:after
                  content 'Ages 39–54'
              &:nth-of-type(4)
                &:before
                  content 'Boomers'
                &:after
                  content 'Ages 55–73'
        .box-container
          display flex
          flex-grow 1
          margin 0
          border-bottom 1px solid rgba(0, 0, 0, 0.21)
          .box
            width 60px
            display flex
            flex-direction column
            justify-content center
            margin-right 5px
            flex-grow 1
            position relative
            .box-height
              position absolute
              bottom 0px
              left 0px
              right 0px
              width 80%
              margin 0 auto
              height 100%
              z-index 0
            p
              font-size 16px
              font-family $atlas
              margin 0
              z-index 100
              text-align center
              line-height 1.1
        .row-label
          //position absolute
          transform translate(0px,0)
          font-size 12px
          width 100%
          max-width 140px
          flex-grow 1
          font-family $atlas
          //top 50%
          //left -5px
          text-align right
          line-height 1.3
          margin 0
          padding 5px
          span
            font-weight 500
            font-size 11px


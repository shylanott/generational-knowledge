  .song
    display flex
    position absolute
    left 50%
    height 90px
    top 3rem
    transform translate(-45px,0px)
    transition transform .5s, opacity 1s
    opacity 0
    counter-reset section
    .song-bubble
      width 30px
      height 30px
      background #f7f7f7
      margin-right 10px
      flex-grow 0
      border-radius 50%
      align-self center
      transition width .5s, height .5s
      font-size 25px
      line-height 31px
      border 1px solid #adadad
      display flex
      flex-direction column
      justify-content center
      counter-increment section
      &:before
        opacity 0
        transition opacity 1s
      p
        margin 0 auto
        padding-left 4px
    .song-bubble-active
      color white
      background rgb(4,4,4)
      width 90px
      height 90px
      padding 1rem
      font-size 16px
      display flex
      border-radius 50%
      flex-direction column
      justify-content center
      border none
      position relative
      div
        &:before
          content counters(section, "") " of 10"
          position absolute
          top 60px
          color black
          transform translate(0,100%)
          text-align center
          width 100%
          left 0px
          font-weight 400
          font-size 14px
          opacity 1
          transition opacity 1s

      svg
        position absolute
        left 0px
        top 0px
        circle
          stroke-width 4px
          fill transparent

      p
        padding-left 0px






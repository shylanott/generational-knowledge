  .bold
    font-weight 600


  .loading
    width: 50px;
    height: 50px;
    border: 4px solid #E5E5E5;
    border-radius: 50%;
    border-top: 4px solid #40B3F0;
    animation: move 1.5s ease-in-out infinite;
    margin 0 auto

  @keyframes move {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

